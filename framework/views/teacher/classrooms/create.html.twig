{% extends "layouts/teacher_base.html.twig" %}

{% block title %}Create Classroom{% endblock %}

{% block content %}
<!-- Header Section -->
<div class="mb-8">
    <div class="flex items-center">
        <a href="/teacher/classrooms" class="text-gray-400 hover:text-gray-600 mr-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </a>
        <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Create New Classroom</h2>
            <p class="text-gray-600">Set up a new classroom for your students.</p>
        </div>
    </div>
</div>

<!-- Error Messages -->
{% if error %}
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <div class="flex">
            <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            <div class="ml-3">
                <p class="text-sm text-red-800">{{ error }}</p>
            </div>
        </div>
    </div>
{% endif %}

<!-- Create Classroom Form -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Classroom Information</h3>
    </div>
    
    <form method="POST" action="/teacher/classrooms" class="p-6 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Classroom Name *</label>
                <input type="text" id="name" name="name" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="e.g., Mathematics 101"
                       value="{{ old_input.name ?? '' }}">
                <p class="mt-1 text-sm text-gray-500">Choose a descriptive name for your classroom.</p>
            </div>
            
            <div>
                <label for="code" class="block text-sm font-medium text-gray-700 mb-2">Classroom Code *</label>
                <input type="text" id="code" name="code" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="e.g., MATH101"
                       value="{{ old_input.code ?? '' }}">
                <p class="mt-1 text-sm text-gray-500">A unique code that students will use to join your classroom.</p>
            </div>
        </div>
        
        <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
            <textarea id="description" name="description" rows="4"
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                      placeholder="Describe what this classroom is about, learning objectives, requirements, etc.">{{ old_input.description ?? '' }}</textarea>
            <p class="mt-1 text-sm text-gray-500">Optional description to help students understand the classroom content.</p>
        </div>
        
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex">
                <svg class="w-5 h-5 text-blue-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div class="ml-3">
                    <h4 class="text-sm font-medium text-blue-800">Classroom Code Tips</h4>
                    <div class="mt-2 text-sm text-blue-700">
                        <ul class="list-disc list-inside space-y-1">
                            <li>Use uppercase letters and numbers (e.g., MATH101, ENG2024)</li>
                            <li>Keep it short and memorable for students</li>
                            <li>Avoid special characters or spaces</li>
                            <li>Make sure it's unique - you'll get an error if it already exists</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
            <a href="/teacher/classrooms" class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition duration-200">
                Cancel
            </a>
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200">
                Create Classroom
            </button>
        </div>
    </form>
</div>

<!-- Classroom Management Preview -->
<div class="mt-8 bg-gray-50 rounded-xl p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">What happens next?</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-sm font-semibold text-blue-600">1</span>
            </div>
            <div>
                <h4 class="font-medium text-gray-900">Share the Code</h4>
                <p class="text-sm text-gray-600 mt-1">Students can join your classroom using the unique code you create.</p>
            </div>
        </div>
        
        <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-sm font-semibold text-green-600">2</span>
            </div>
            <div>
                <h4 class="font-medium text-gray-900">Add Students</h4>
                <p class="text-sm text-gray-600 mt-1">Manage your class roster by adding or removing students as needed.</p>
            </div>
        </div>
        
        <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-sm font-semibold text-purple-600">3</span>
            </div>
            <div>
                <h4 class="font-medium text-gray-900">Create Assignments</h4>
                <p class="text-sm text-gray-600 mt-1">Start creating assignments and track student progress.</p>
            </div>
        </div>
    </div>
</div>

{% endblock %}
