{% extends "layouts/teacher_base.html.twig" %}

{% block title %}Edit Classroom{% endblock %}

{% block content %}
<!-- Header Section -->
<div class="mb-8">
    <div class="flex items-center">
        <a href="/teacher/classrooms" class="text-gray-400 hover:text-gray-600 mr-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </a>
        <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Edit Classroom</h2>
            <p class="text-gray-600">Update your classroom information.</p>
        </div>
    </div>
</div>

<!-- Error Messages -->
{% if error_message %}
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <div class="flex">
            <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            <div class="ml-3">
                <p class="text-sm text-red-800">{{ error_message }}</p>
            </div>
        </div>
    </div>
{% endif %}

<!-- Edit Classroom Form -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Classroom Information</h3>
    </div>
    
    <form method="POST" action="/teacher/classrooms/{{ classroom.id }}/update" class="p-6 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Classroom Name *</label>
                <input type="text" id="name" name="name" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="e.g., Mathematics 101"
                       value="{{ classroom.name }}">
                <p class="mt-1 text-sm text-gray-500">Choose a descriptive name for your classroom.</p>
            </div>
            
            <div>
                <label for="code" class="block text-sm font-medium text-gray-700 mb-2">Classroom Code *</label>
                <input type="text" id="code" name="code" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="e.g., MATH101"
                       value="{{ classroom.code }}">
                <p class="mt-1 text-sm text-gray-500">A unique code that students will use to join your classroom.</p>
            </div>
        </div>
        
        <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
            <textarea id="description" name="description" rows="4"
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                      placeholder="Describe what this classroom is about, learning objectives, requirements, etc.">{{ classroom.description }}</textarea>
            <p class="mt-1 text-sm text-gray-500">Optional description to help students understand the classroom content.</p>
        </div>
        
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <div class="flex">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <div class="ml-3">
                    <h4 class="text-sm font-medium text-yellow-800">Important Note</h4>
                    <div class="mt-1 text-sm text-yellow-700">
                        <p>Changing the classroom code will require students to use the new code to access this classroom. Make sure to inform your students about any code changes.</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
            <a href="/teacher/classrooms" class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition duration-200">
                Cancel
            </a>
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200">
                Update Classroom
            </button>
        </div>
    </form>
</div>

<!-- Classroom Stats -->
<div class="mt-8 bg-gray-50 rounded-xl p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Classroom Statistics</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg p-4 border border-gray-200">
            <div class="flex items-center">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-600">Enrolled Students</p>
                    <p class="text-lg font-bold text-gray-900">{{ classroom.student_count ?? 0 }}</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg p-4 border border-gray-200">
            <div class="flex items-center">
                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-600">Assignments</p>
                    <p class="text-lg font-bold text-gray-900">{{ classroom.assignment_count ?? 0 }}</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg p-4 border border-gray-200">
            <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a4 4 0 118 0v4m-4 8a3 3 0 01-3-3V9a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-600">Created</p>
                    <p class="text-lg font-bold text-gray-900">{{ classroom.created_at|date('M d, Y') }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
