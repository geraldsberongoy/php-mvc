                            <option value="7" {{ classroom.grade_level == '7' ? 'selected' : '' }}>Grade 7</option>
                            <option value="8" {{ classroom.grade_level == '8' ? 'selected' : '' }}>Grade 8</option>
                            <option value="9" {{ classroom.grade_level == '9' ? 'selected' : '' }}>Grade 9</option>
                            <option value="10" {{ classroom.grade_level == '10' ? 'selected' : '' }}>Grade 10</option>
                            <option value="11" {{ classroom.grade_level == '11' ? 'selected' : '' }}>Grade 11</option>
                            <option value="12" {{ classroom.grade_level == '12' ? 'selected' : '' }}>Grade 12</option>
                            <option value="college" {{ classroom.grade_level == 'college' ? 'selected' : '' }}>College</option>
