<!-- Participants Tab Content - Students and Co-teachers -->
<div class="space-y-6">
    <!-- Participants Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">Class Participants</h3>
            <p class="text-sm text-gray-600">{{ students|length }} students â€¢ 1 teacher</p>
        </div>
        <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Students
        </button>
    </div>

    <!-- Search and Filter -->
    <div class="flex space-x-4">
        <div class="flex-1 relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>
            <input type="text" class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Search students...">
        </div>
        <select class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option>All Students</option>
            <option>Active</option>
            <option>Pending Invites</option>
        </select>
    </div>

    <!-- Teachers Section -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                Teachers
            </h4>
        </div>
        <div class="p-6">
            <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center text-white font-semibold text-lg">
                    {{ first_name[0] }}
                </div>
                <div class="flex-1">
                    <h5 class="font-semibold text-gray-900">{{ first_name }} {{ last_name }}</h5>
                    <p class="text-sm text-gray-600">{{ email }}</p>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mt-1">
                        Primary Teacher
                    </span>
                </div>
                <div class="text-right">
                    <p class="text-sm text-gray-500">Class Owner</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Students Section -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900 flex items-center justify-between">
                <span class="flex items-center">
                    <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                    </svg>
                    Students ({{ students|length }})
                </span>
                <button class="text-blue-600 hover:text-blue-700 text-sm font-medium">
                    Invite Students
                </button>
            </h4>
        </div>
        <div class="divide-y divide-gray-200">
            {% if students and students|length > 0 %}
                {% for student in students %}
                <div class="p-6 hover:bg-gray-50 transition-colors">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center text-green-600 font-semibold">
                                {{ student.first_name[0] }}{{ student.last_name[0] }}
                            </div>
                            <div>
                                <h5 class="font-medium text-gray-900">{{ student.first_name }} {{ student.last_name }}</h5>
                                <p class="text-sm text-gray-600">{{ student.email }}</p>
                                <div class="flex items-center space-x-3 mt-1">
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        Active
                                    </span>
                                    <span class="text-xs text-gray-500">Joined {{ student.joined_date ?? 'Aug 25, 2024' }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <div class="text-right text-sm">
                                <p class="text-gray-900 font-medium">85%</p>
                                <p class="text-gray-500">Avg Grade</p>
                            </div>
                            <div class="text-right text-sm">
                                <p class="text-gray-900 font-medium">12/15</p>
                                <p class="text-gray-500">Assignments</p>
                            </div>
                            <div class="relative">
                                <button class="p-2 text-gray-400 hover:text-gray-600 rounded-full hover:bg-gray-100">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <!-- Sample students if no real data -->
                <div class="p-6 hover:bg-gray-50 transition-colors">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center text-green-600 font-semibold">
                                JS
                            </div>
                            <div>
                                <h5 class="font-medium text-gray-900">John Smith</h5>
                                <p class="text-sm text-gray-600">john.smith@student.edu</p>
                                <div class="flex items-center space-x-3 mt-1">
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        Active
                                    </span>
                                    <span class="text-xs text-gray-500">Joined Aug 25, 2024</span>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <div class="text-right text-sm">
                                <p class="text-gray-900 font-medium">92%</p>
                                <p class="text-gray-500">Avg Grade</p>
                            </div>
                            <div class="text-right text-sm">
                                <p class="text-gray-900 font-medium">15/15</p>
                                <p class="text-gray-500">Assignments</p>
                            </div>
                            <div class="relative">
                                <button class="p-2 text-gray-400 hover:text-gray-600 rounded-full hover:bg-gray-100">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="p-6 hover:bg-gray-50 transition-colors">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center text-purple-600 font-semibold">
                                MD
                            </div>
                            <div>
                                <h5 class="font-medium text-gray-900">Maria Davis</h5>
                                <p class="text-sm text-gray-600">maria.davis@student.edu</p>
                                <div class="flex items-center space-x-3 mt-1">
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        Active
                                    </span>
                                    <span class="text-xs text-gray-500">Joined Aug 26, 2024</span>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <div class="text-right text-sm">
                                <p class="text-gray-900 font-medium">88%</p>
                                <p class="text-gray-500">Avg Grade</p>
                            </div>
                            <div class="text-right text-sm">
                                <p class="text-gray-900 font-medium">14/15</p>
                                <p class="text-gray-500">Assignments</p>
                            </div>
                            <div class="relative">
                                <button class="p-2 text-gray-400 hover:text-gray-600 rounded-full hover:bg-gray-100">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="p-6 hover:bg-gray-50 transition-colors">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center text-yellow-600 font-semibold">
                                AJ
                            </div>
                            <div>
                                <h5 class="font-medium text-gray-900">Alex Johnson</h5>
                                <p class="text-sm text-gray-600">alex.johnson@student.edu</p>
                                <div class="flex items-center space-x-3 mt-1">
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                        Pending
                                    </span>
                                    <span class="text-xs text-gray-500">Invited Sep 1, 2024</span>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <div class="text-right text-sm">
                                <p class="text-gray-400 font-medium">--</p>
                                <p class="text-gray-500">Avg Grade</p>
                            </div>
                            <div class="text-right text-sm">
                                <p class="text-gray-400 font-medium">--</p>
                                <p class="text-gray-500">Assignments</p>
                            </div>
                            <div class="relative">
                                <button class="p-2 text-gray-400 hover:text-gray-600 rounded-full hover:bg-gray-100">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Class Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Active Students</p>
                    <p class="text-2xl font-bold text-gray-900">{{ (students|length) - 1 }}</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Class Average</p>
                    <p class="text-2xl font-bold text-gray-900">87%</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Pending Invites</p>
                    <p class="text-2xl font-bold text-gray-900">1</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Actions (when implemented) -->
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 text-center">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Student Management Features</h3>
        <p class="text-gray-600 mb-4">Enhanced participant management tools are coming soon. Currently showing example data with your enrolled students.</p>
        <p class="text-sm text-gray-500">Upcoming features:</p>
        <ul class="text-sm text-gray-500 mt-2 space-y-1">
            <li>â€¢ Bulk student invitations via email or CSV</li>
            <li>â€¢ Student performance analytics and insights</li>
            <li>â€¢ Communication tools and messaging</li>
            <li>â€¢ Attendance tracking and reporting</li>
            <li>â€¢ Parent/guardian notifications</li>
        </ul>
    </div>
</div>
