{# Navigation Component - Now with session data support #}
{% set isAuthenticated = session.user_id is defined and session.user_id %}

<nav class="bg-white shadow-sm border-b border-gray-200 fixed top-0 left-0 right-0 z-50 w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                    <span class="text-white font-bold text-sm">PP</span>
                </div>
                <a href="{{ isAuthenticated ? '/dashboard' : '/' }}" class="text-xl font-bold text-gray-900">PUPPortal</a>
            </div>
            
            <!-- Navigation Items -->
            <div class="flex items-center space-x-4">
                {% if isAuthenticated %}
                    
                    <!-- Role-based navigation -->
                    {% if user_role == 'admin' %}
                        <!-- Navigation Links -->
                        <div class="flex items-center space-x-6">
                            <a href="/admin/dashboard" class="text-sm {{ current_route == '/admin/dashboard' ? 'font-medium text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">Dashboard</a>
                            <a href="/admin/users" class="text-sm {{ current_route == '/admin/users' ? 'font-medium text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">User Management</a>
                            <a href="/admin/activity-logs" class="text-sm {{ current_route == '/admin/activity-logs' ? 'font-medium text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">Activity Logs</a>
                            <a href="/admin/classrooms" class="text-sm {{ current_route == '/admin/classrooms' ? 'font-medium text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">Classrooms</a>
                        </div>
                    {% elseif user_role == 'teacher' %}
                        <a href="/teacher/dashboard" class="text-sm {{ current_route == '/teacher/dashboard' ? 'font-medium text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">Dashboard</a>
                        <a href="/teacher/classrooms" class="text-sm {{ current_route == '/teacher/classrooms' ? 'font-medium text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">My Classes</a>
                        <a href="/teacher/assignments" class="text-sm {{ current_route == '/teacher/assignments' ? 'font-medium text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">Assignments</a>
                    {% elseif user_role == 'student' %}
                        <a href="/student/dashboard" class="text-sm {{ current_route == '/student/dashboard' ? 'font-medium text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">Dashboard</a>
                        <a href="/student/classrooms" class="text-sm {{ current_route == '/student/classrooms' ? 'font-medium text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">My Classes</a>
                        <a href="/student/assignments" class="text-sm {{ current_route == '/student/assignments' ? 'font-medium text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">Assignments</a>
                    {% endif %}
                    
                    
                {% else %}
                    <!-- Guest Navigation -->
                    <a href="/login" class="text-gray-600 hover:text-gray-900 font-medium">Login</a>
                    <a href="/register" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition duration-200">Sign Up</a>
                {% endif %}
            </div>

            {% if isAuthenticated %}
                <!-- User menu -->
                    <div class="flex items-center space-x-4">
                        <span class="text-sm text-gray-600">
                            Welcome, <span class="font-medium text-gray-900">{{ first_name }}</span>
                            <span class="ml-2 px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">{{ user_role|title }}</span>
                        </span>
                        {# {% block user_menu %}{% endblock %} #}
                        <form action="/logout" method="POST" class="inline">
                            <button type="submit" class="text-sm text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md hover:bg-gray-100 transition duration-200">
                                Sign out
                            </button>
                        </form>
                    </div>
            {% endif %}
        </div>
    </div>
</nav>
