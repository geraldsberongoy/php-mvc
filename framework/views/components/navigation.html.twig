{# Navigation Component - Now with session data support #}
{% set isAuthenticated = session.user_id is defined and session.user_id %}

<nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                    <span class="text-white font-bold text-sm">PP</span>
                </div>
                <a href="{{ isAuthenticated ? '/dashboard' : '/' }}" class="text-xl font-bold text-gray-900">PUPPortal</a>
            </div>
            
            <!-- Navigation Items -->
            <div class="flex items-center space-x-4">
                {% if isAuthenticated %}
                    <!-- Authenticated Navigation -->
                    <span class="text-sm text-gray-600">
                        Welcome back, <span class="font-medium text-gray-900">{{ session.first_name ?? 'User' }}</span>
                        {% if session.user_role is defined %}
                            <span class="ml-2 px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">{{ session.user_role|title }}</span>
                        {% endif %}
                    </span>
                    
                    <!-- Role-based navigation -->
                    {% if session.user_role == 'admin' %}
                        <a href="/users" class="text-gray-600 hover:text-gray-900 font-medium">Users</a>
                        <a href="/activity-logs" class="text-gray-600 hover:text-gray-900 font-medium">Logs</a>
                    {% elseif session.user_role == 'teacher' %}
                        <a href="/classrooms" class="text-gray-600 hover:text-gray-900 font-medium">My Classes</a>
                        <a href="/assignments" class="text-gray-600 hover:text-gray-900 font-medium">Assignments</a>
                    {% elseif session.user_role == 'student' %}
                        <a href="/classrooms" class="text-gray-600 hover:text-gray-900 font-medium">My Classes</a>
                        <a href="/assignments" class="text-gray-600 hover:text-gray-900 font-medium">Assignments</a>
                    {% endif %}
                    
                    <a href="/dashboard" class="text-gray-600 hover:text-gray-900 font-medium">Dashboard</a>
                    
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition duration-200">
                            Logout
                        </button>
                    </form>
                {% else %}
                    <!-- Guest Navigation -->
                    <a href="/login" class="text-gray-600 hover:text-gray-900 font-medium">Login</a>
                    <a href="/register" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition duration-200">Sign Up</a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>
