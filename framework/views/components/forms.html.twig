{# Form Input Macros #}

{% macro input(name, type = 'text', placeholder = '', value = '', required = false, class = '') %}
    <input 
        type="{{ type }}" 
        name="{{ name }}" 
        id="{{ name }}"
        placeholder="{{ placeholder }}"
        value="{{ value }}"
        {% if required %}required{% endif %}
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 {{ class }}"
    >
{% endmacro %}

{% macro label(for, text, required = false) %}
    <label for="{{ for }}" class="block text-sm font-medium text-gray-700 mb-1">
        {{ text }}
        {% if required %}<span class="text-red-500">*</span>{% endif %}
    </label>
{% endmacro %}

{% macro textarea(name, placeholder = '', value = '', rows = 4, required = false, class = '') %}
    <textarea 
        name="{{ name }}" 
        id="{{ name }}"
        rows="{{ rows }}"
        placeholder="{{ placeholder }}"
        {% if required %}required{% endif %}
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 {{ class }}"
    >{{ value }}</textarea>
{% endmacro %}

{% macro select(name, options, selected = '', required = false, class = '') %}
    <select 
        name="{{ name }}" 
        id="{{ name }}"
        {% if required %}required{% endif %}
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 {{ class }}"
    >
        {% for value, text in options %}
            <option value="{{ value }}" {% if value == selected %}selected{% endif %}>{{ text }}</option>
        {% endfor %}
    </select>
{% endmacro %}
