{# Feature Card Macro #}

{% macro feature_card(icon, title, description, color = 'blue') %}
    <div class="text-center">
        <div class="w-12 h-12 bg-{{ color }}-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            {{ icon | raw }}
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ title }}</h3>
        <p class="text-gray-600">{{ description }}</p>
    </div>
{% endmacro %}
