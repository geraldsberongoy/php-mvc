{# Modal Components #}

{# Basic Modal #}
{% macro modal(id, title, content, show_footer = true, size = 'md') %}
    <div id="{{ id }}" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50" onclick="closeModal('{{ id }}')">
        <div class="relative top-20 mx-auto p-5 border w-11/12 
            {% if size == 'sm' %}max-w-md
            {% elseif size == 'lg' %}max-w-4xl
            {% elseif size == 'xl' %}max-w-6xl
            {% else %}max-w-2xl{% endif %}
            shadow-lg rounded-md bg-white" onclick="event.stopPropagation()">
            
            <!-- Modal Header -->
            <div class="flex items-center justify-between pb-3 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">{{ title }}</h3>
                <button type="button" class="text-gray-400 hover:text-gray-600" onclick="closeModal('{{ id }}')">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            <!-- Modal Body -->
            <div class="pt-4 pb-4">
                {{ content | raw }}
            </div>
            
            <!-- Modal Footer -->
            {% if show_footer %}
                <div class="flex items-center justify-end pt-3 border-t border-gray-200 space-x-2">
                    <button type="button" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition duration-200" onclick="closeModal('{{ id }}')">
                        Cancel
                    </button>
                    <button type="button" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200" onclick="submitModal('{{ id }}')">
                        Confirm
                    </button>
                </div>
            {% endif %}
        </div>
    </div>
{% endmacro %}

{# Confirmation Modal #}
{% macro confirm_modal(id, title, message, confirm_action = '', confirm_text = 'Confirm', cancel_text = 'Cancel') %}
    <div id="{{ id }}" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50" onclick="closeModal('{{ id }}')">
        <div class="relative top-20 mx-auto p-5 border w-11/12 max-w-md shadow-lg rounded-md bg-white" onclick="event.stopPropagation()">
            
            <!-- Warning Icon -->
            <div class="mt-3 text-center">
                <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
                    <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                </div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 mt-4">{{ title }}</h3>
                <div class="mt-2 px-7 py-3">
                    <p class="text-sm text-gray-500">{{ message }}</p>
                </div>
                <div class="items-center px-4 py-3 space-x-4">
                    <button type="button" 
                            class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition duration-200"
                            {% if confirm_action %}onclick="{{ confirm_action }}"{% endif %}>
                        {{ confirm_text }}
                    </button>
                    <button type="button" 
                            class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition duration-200" 
                            onclick="closeModal('{{ id }}')">
                        {{ cancel_text }}
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

{# Form Modal #}
{% macro form_modal(id, title, form_content, form_action = '', method = 'POST') %}
    <div id="{{ id }}" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50" onclick="closeModal('{{ id }}')">
        <div class="relative top-20 mx-auto p-5 border w-11/12 max-w-2xl shadow-lg rounded-md bg-white" onclick="event.stopPropagation()">
            
            <!-- Modal Header -->
            <div class="flex items-center justify-between pb-3 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">{{ title }}</h3>
                <button type="button" class="text-gray-400 hover:text-gray-600" onclick="closeModal('{{ id }}')">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            <!-- Form -->
            <form method="{{ method }}" {% if form_action %}action="{{ form_action }}"{% endif %} class="pt-4">
                <div class="pb-4">
                    {{ form_content | raw }}
                </div>
                
                <!-- Form Footer -->
                <div class="flex items-center justify-end pt-3 border-t border-gray-200 space-x-2">
                    <button type="button" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition duration-200" onclick="closeModal('{{ id }}')">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endmacro %}

{# Modal JavaScript #}
{% macro modal_scripts() %}
<script>
    function openModal(modalId) {
        document.getElementById(modalId).classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }

    function closeModal(modalId) {
        document.getElementById(modalId).classList.add('hidden');
        document.body.style.overflow = 'auto';
    }

    function submitModal(modalId) {
        const modal = document.getElementById(modalId);
        const form = modal.querySelector('form');
        if (form) {
            form.submit();
        }
    }

    // Close modal on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            const modals = document.querySelectorAll('[id$="-modal"]');
            modals.forEach(modal => {
                if (!modal.classList.contains('hidden')) {
                    closeModal(modal.id);
                }
            });
        }
    });
</script>
{% endmacro %}
