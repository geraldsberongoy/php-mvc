{# Button Macros - Reusable button components #}

{# Primary Button #}
{% macro primary(text, href = null, type = 'button', class = '', onclick = '', disabled = false) %}
    {% if href %}
        <a href="{{ href }}" 
           class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition duration-200 inline-block {{ class }} {% if disabled %}opacity-50 cursor-not-allowed{% endif %}"
           {% if onclick %}onclick="{{ onclick }}"{% endif %}
           {% if disabled %}aria-disabled="true"{% endif %}>
            {{ text }}
        </a>
    {% else %}
        <button type="{{ type }}" 
                class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition duration-200 {{ class }}"
                {% if onclick %}onclick="{{ onclick }}"{% endif %}
                {% if disabled %}disabled{% endif %}>
            {{ text }}
        </button>
    {% endif %}
{% endmacro %}

