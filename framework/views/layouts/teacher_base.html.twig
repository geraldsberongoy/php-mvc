<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Teacher Dashboard{% endblock %} - PUPPortal</title>
    <link href="/css/style.css" rel="stylesheet">
    {% block head %}{% endblock %}
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Teacher Navigation -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo/Brand -->
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-green-600 rounded-lg flex items-center justify-center">
                        <span class="text-white font-bold text-sm">PP</span>
                    </div>
                    <a href="/teacher/dashboard" class="text-xl font-bold text-gray-900">PUPPortal Teacher</a>
                </div>
                
                <!-- Teacher Navigation Links -->
                <div class="flex items-center space-x-6">
                    <a href="/teacher/dashboard" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200">Dashboard</a>
                    <a href="/classrooms" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200">My Classes</a>
                    <a href="/assignments" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200">Assignments</a>
                    <a href="/grades" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200">Grades</a>
                    
                    <!-- User Info -->
                    <span class="text-sm text-gray-600">
                        Welcome, <span class="font-medium text-gray-900">{{ session.first_name ?? 'Teacher' }}</span>
                        <span class="ml-2 px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Teacher</span>
                    </span>
                    
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition duration-200">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 min-h-[calc(100vh-65px)]">
        {% block content %}{% endblock %}
    </div>
    
    {% include 'components/footer.html.twig' %}
    {% block scripts %}{% endblock %}
</body>
</html>