<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Teacher Dashboard{% endblock %} - PUPPortal</title>
    <link href="/css/style.css" rel="stylesheet">
    {% block head %}{% endblock %}
</head>
<body class="bg-gray-50 min-h-screen pt-[65px]">
    <!-- Use reusable navigation component -->
    {% include 'components/navigation.html.twig' %}

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 min-h-[calc(100vh-65px)]">
        {% block content %}{% endblock %}
    </div>
    
    {% include 'components/footer.html.twig' %}
    {% block scripts %}{% endblock %}
</body>
</html>