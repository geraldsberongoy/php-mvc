<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard - Learning Management System</title>
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation Header -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo/Brand -->
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                        <span class="text-white font-bold text-sm">LMS</span>
                    </div>
                    <h1 class="text-xl font-semibold text-gray-900">Learning Portal</h1>
                </div>
                
                <!-- User menu -->
                <div class="flex items-center space-x-4">
                    <span class="text-sm text-gray-600">
                        Welcome back, <span class="font-medium text-gray-900">{{ first_name }}</span>
                        <span class="ml-2 px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">{{ user_role|title }}</span>
                    </span>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="text-sm text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md hover:bg-gray-100 transition duration-200">
                            Sign out
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Welcome Section -->
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
                {% if user_role == 'student' %}
                    Student Dashboard
                {% elseif user_role == 'teacher' %}
                    Teacher Dashboard
                {% else %}
                    Admin Dashboard
                {% endif %}
            </h2>
            <p class="text-gray-600">
                {% if user_role == 'student' %}
                    Track your learning progress and assignments.
                {% elseif user_role == 'teacher' %}
                    Manage your classrooms and student submissions.
                {% else %}
                    System overview and user management.
                {% endif %}
            </p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            {% if user_role == 'student' %}
                <!-- Student Stats -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Enrolled Classes</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.enrolled_classrooms }}</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Completed</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.completed_assignments }}</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Pending</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.pending_assignments }}</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Avg. Grade</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.average_grade }}%</p>
                        </div>
                    </div>
                </div>

            {% elseif user_role == 'teacher' %}
                <!-- Teacher Stats -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">My Classrooms</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.total_classrooms }}</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Total Students</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.total_students }}</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Pending Reviews</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.pending_submissions }}</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Assignments</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.assignments_created }}</p>
                        </div>
                    </div>
                </div>

            {% else %}
                <!-- Admin Stats -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Total Users</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.total_users }}</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0H8m8 0v2a2 2 0 002 2h2a2 2 0 002-2V6zM8 6V4a2 2 0 012-2h4a2 2 0 012 2v2M8 6H6a2 2 0 00-2 2v2a2 2 0 002 2h2m0 0h8m-8 0v2a2 2 0 002 2h4a2 2 0 002-2v-2m-8 0V8"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Teachers</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.total_teachers }}</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Students</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.total_students }}</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Classrooms</p>
                            <p class="text-2xl font-bold text-gray-900">{{ dashboard_data.stats.total_classrooms }}</p>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Main Grid Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content Area -->
            <div class="lg:col-span-2">
                {% if user_role == 'student' %}
                    <!-- Student: Recent Classrooms -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">My Classrooms</h3>
                        </div>
                        <div class="p-6">
                            <div class="space-y-4">
                                {% for classroom in dashboard_data.recent_classrooms %}
                                    <div class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition duration-200 cursor-pointer">
                                        <div class="w-12 h-12 bg-{{ classroom.color }}-500 rounded-lg flex items-center justify-center flex-shrink-0">
                                            <span class="text-white font-semibold text-sm">{{ classroom.code[:2] }}</span>
                                        </div>
                                        <div class="ml-4 flex-1">
                                            <h4 class="text-sm font-medium text-gray-900">{{ classroom.name }}</h4>
                                            <p class="text-xs text-gray-500">{{ classroom.teacher_name }} â€¢ {{ classroom.code }}</p>
                                            <div class="mt-2">
                                                <div class="bg-gray-200 rounded-full h-2">
                                                    <div class="bg-{{ classroom.color }}-600 h-2 rounded-full" style="width: {{ classroom.progress }}%"></div>
                                                </div>
                                                <p class="text-xs text-gray-500 mt-1">{{ classroom.progress }}% complete</p>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                {% elseif user_role == 'teacher' %}
                    <!-- Teacher: My Classrooms -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">My Classrooms</h3>
                        </div>
                        <div class="p-6">
                            <div class="space-y-4">
                                {% for classroom in dashboard_data.my_classrooms %}
                                    <div class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition duration-200 cursor-pointer">
                                        <div class="w-12 h-12 bg-{{ classroom.color }}-500 rounded-lg flex items-center justify-center flex-shrink-0">
                                            <span class="text-white font-semibold text-sm">{{ classroom.code[:2] }}</span>
                                        </div>
                                        <div class="ml-4 flex-1">
                                            <h4 class="text-sm font-medium text-gray-900">{{ classroom.name }}</h4>
                                            <p class="text-xs text-gray-500">{{ classroom.code }}</p>
                                            <div class="flex space-x-4 mt-2">
                                                <span class="text-xs text-gray-600">{{ classroom.student_count }} students</span>
                                                <span class="text-xs text-gray-600">{{ classroom.assignments_count }} assignments</span>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                {% if user_role == 'student' %}
                    <!-- Student: Upcoming Assignments -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">Upcoming Assignments</h3>
                        </div>
                        <div class="p-6 space-y-4">
                            {% for assignment in dashboard_data.recent_assignments %}
                                <div class="border-l-4 border-{{ assignment.status == 'pending' ? 'yellow' : 'green' }}-400 pl-4">
                                    <h4 class="text-sm font-medium text-gray-900">{{ assignment.title }}</h4>
                                    <p class="text-xs text-gray-500">{{ assignment.classroom_name }}</p>
                                    <p class="text-xs text-gray-600 mt-1">Due: {{ assignment.due_date }}</p>
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium mt-2 
                                        {{ assignment.status == 'pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' }}">
                                        {{ assignment.status|title }}
                                    </span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                {% elseif user_role == 'teacher' %}
                    <!-- Teacher: Pending Submissions -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">Pending Reviews</h3>
                        </div>
                        <div class="p-6 space-y-4">
                            {% for submission in dashboard_data.pending_submissions %}
                                <div class="border-l-4 border-red-400 pl-4">
                                    <h4 class="text-sm font-medium text-gray-900">{{ submission.student_name }}</h4>
                                    <p class="text-xs text-gray-500">{{ submission.assignment_title }}</p>
                                    <p class="text-xs text-gray-600">{{ submission.classroom_name }}</p>
                                    <p class="text-xs text-gray-500 mt-1">Due: {{ submission.due_date }}</p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <!-- Recent Activity (All Roles) -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900">Recent Activity</h3>
                    </div>
                    <div class="p-6 space-y-4">
                        {% for activity in dashboard_data.recent_activity %}
                            <div class="flex items-start space-x-3">
                                <div class="w-2 h-2 
                                    {% if activity.action == 'submitted_assignment' or activity.action == 'graded_assignment' %}
                                        bg-green-500
                                    {% elseif activity.action == 'joined_classroom' or activity.action == 'created_assignment' %}
                                        bg-blue-500
                                    {% else %}
                                        bg-purple-500
                                    {% endif %}
                                    rounded-full mt-2 flex-shrink-0"></div>
                                <div>
                                    <p class="text-sm text-gray-900">{{ activity.description }}</p>
                                    <p class="text-xs text-gray-500">{{ activity.created_at|date('M d, Y g:i A') }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>