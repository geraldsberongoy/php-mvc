{% extends 'layouts/base.html.twig' %}
{% from 'components/buttons.html.twig' import primary, secondary %}
{% from 'components/feature_card.html.twig' import feature_card %}

{% block title %}EduPortal - Learning Management System{% endblock %}

{% block content %}
    {% include 'components/navigation.html.twig' %}

    <!-- Hero Section -->
    <section class="py-20">
        <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                Welcome to <span class="text-blue-600">PUPPortal</span>
            </h1>
            <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                Your gateway to online learning. Access courses, track progress, and achieve your educational goals.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                {{ primary('Get Started', '/register', class='px-8 py-3') }}
                {{ secondary('Sign In', '/login', class='px-8 py-3') }}
            </div>
        </div>
    </section>

    <!-- Features -->
    <section class="py-16 bg-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Why Choose PUPPortal?</h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {{ feature_card(
                    '<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>',
                    'Quality Courses',
                    'Access high-quality educational content designed by experts.',
                    'blue'
                ) }}
                
                {{ feature_card(
                    '<svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>',
                    'Track Progress',
                    'Monitor your learning journey with detailed progress tracking.',
                    'green'
                ) }}
                
                {{ feature_card(
                    '<svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
                    'Learn Anytime',
                    'Study at your own pace, whenever and wherever you want.',
                    'purple'
                ) }}
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-blue-600">
        <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-white mb-4">
                Ready to Start Learning?
            </h2>
            <p class="text-blue-100 mb-6">
                Join our community of learners today.
            </p>
            <a href="/register" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition duration-200">
                Get Started Now
            </a>
        </div>
    </section>

    {% include 'components/footer.html.twig' %}
{% endblock %}