{% extends 'layouts/admin_base.html.twig' %}

{% block title %}Archived Users{% endblock %}

{% block content %}
<div class="container mx-auto py-6">
    <div class="bg-white shadow-lg rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex justify-between items-center">
                <h1 class="text-2xl font-bold text-gray-800">Archived Users</h1>
                <div class="flex space-x-4">
                    <a href="/admin/users" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition duration-200">
                        View Active Users
                    </a>
                </div>
            </div>
        </div>

        {% if success_message %}
            <div class="mx-6 mt-4 p-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
                {{ success_message }}
            </div>
        {% endif %}

        {% if error_message %}
            <div class="mx-6 mt-4 p-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                {{ error_message }}
            </div>
        {% endif %}

        <div class="px-6 py-4">
            <div class="mb-4">
                <p class="text-gray-600">Total archived users: <span class="font-semibold">{{ totalUsers }}</span></p>
            </div>

            {% if users|length > 0 %}
                <div class="overflow-x-auto">
                    <table class="min-w-full table-auto">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Archived On</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for user in users %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ user.id }}</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ user.first_name }} {% if user.middle_name %}{{ user.middle_name }} {% endif %}{{ user.last_name }}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ user.email }}</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full
                                            {% if user.role == 'admin' %}
                                                bg-purple-100 text-purple-800
                                            {% elseif user.role == 'teacher' %}
                                                bg-blue-100 text-blue-800
                                            {% else %}
                                                bg-green-100 text-green-800
                                            {% endif %}">
                                            {{ user.role|title }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                                            Archived
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        {{ user.updated_at|date('M d, Y') }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                        <form method="POST" action="/admin/users/{{ user.id }}/restore" style="display: inline;">
                                            <button type="submit" 
                                                    class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600 transition duration-200"
                                                    onclick="return confirm('Are you sure you want to restore this user?')">
                                                Restore
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                {% if totalPages > 1 %}
                    <div class="mt-6 flex justify-center">
                        <nav class="flex items-center space-x-2">
                            {% if currentPage > 1 %}
                                <a href="/admin/users/archived?page={{ currentPage - 1 }}" 
                                   class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                                    Previous
                                </a>
                            {% endif %}

                            {% for page in 1..totalPages %}
                                {% if page == currentPage %}
                                    <span class="px-3 py-2 text-sm font-medium text-white bg-blue-600 border border-blue-600 rounded-md">
                                        {{ page }}
                                    </span>
                                {% else %}
                                    <a href="/admin/users/archived?page={{ page }}" 
                                       class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                                        {{ page }}
                                    </a>
                                {% endif %}
                            {% endfor %}

                            {% if currentPage < totalPages %}
                                <a href="/admin/users/archived?page={{ currentPage + 1 }}" 
                                   class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                                    Next
                                </a>
                            {% endif %}
                        </nav>
                    </div>
                {% endif %}
            {% else %}
                <div class="text-center py-8">
                    <div class="text-gray-500 text-lg">No archived users found.</div>
                    <p class="text-gray-400 mt-2">All archived users will appear here.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
