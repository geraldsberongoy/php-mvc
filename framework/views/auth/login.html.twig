
{% from 'components/forms.html.twig' import input, label %}
{% from 'components/buttons.html.twig' import primary %}
{% from 'components/alerts.html.twig' import error as alert_error %}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Sign In - PUPPortal</title>
	<!-- Tailwind CSS -->
	<script src="https://cdn.tailwindcss.com"></script>
	<link href="/css/style.css" rel="stylesheet">

<body class="bg-gray-50 min-h-screen">
    {% include 'components/navigation.html.twig' %}

    <!-- Login Form -->
    <div class="flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 mt-[65px] min-h-[calc(100vh-65px)]">
        <div class="max-w-md w-full">
            <!-- Header -->
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-2">Welcome back</h2>
                <p class="text-gray-600">Sign in to your PUPPortal account</p>
            </div>

            <!-- Form -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
                {{ alert_error(error) }}

                {% if success %}
                    <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span class="text-green-800 text-sm">{{ success }}</span>
                        </div>
                    </div>
                {% endif %}

                <form method="post" action="/login" class="space-y-6">
                    <div>
                        {{ label('email', 'Email address', true) }}
                        {{ input('email', 'email', 'Enter your email', old.email|e, true, 'px-4 py-3') }}
                    </div>

                    <div>
                        {{ label('password', 'Password', true) }}
                        {{ input('password', 'password', 'Enter your password', '', true, 'px-4 py-3') }}
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input 
                                id="remember-me" 
                                name="remember-me" 
                                type="checkbox" 
                                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                            >
                            <label for="remember-me" class="ml-2 block text-sm text-gray-600">Remember me</label>
                        </div>
                        <a href="/forgot-password" class="text-sm text-blue-600 hover:text-blue-500">Forgot password?</a>
                    </div>

                    {{ primary('Sign In', type='submit', class='w-full py-3') }}
                </form>

                <!-- Divider -->
                <div class="mt-8 pt-6 border-t border-gray-200 text-center">
                    <p class="text-sm text-gray-600">
                        Don't have an account? 
                        <a href="/register" class="font-medium text-blue-600 hover:text-blue-500">Sign up here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    {% include 'components/footer.html.twig' %}
</body>
</html>