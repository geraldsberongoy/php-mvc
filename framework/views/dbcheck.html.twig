<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>DB Check</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 2rem }
        .ok { color: green }
        .err { color: red }
        pre { background:#f6f6f6; padding:1rem }
    </style>
</head>
<body>
    <h1>Database connection check</h1>

    {% if connected %}
        <p class="ok">Connected successfully.</p>
    {% else %}
        <p class="err">Connection failed.</p>
        {% if error is defined %}
            <h3>Error</h3>
            <pre>{{ error }}</pre>
        {% endif %}
    {% endif %}
</body>
</html>
