{% extends 'layouts/base.html.twig' %}
{% from 'components/forms.html.twig' import input, label %}
{% from 'components/buttons.html.twig' import primary %}
{% from 'components/alerts.html.twig' import error as alert_error %}

{% block title %}Sign Up - EduPortal{% endblock %}

{% block content %}
    {% include 'components/navigation.html.twig' %}

    <!-- Register Form -->
    <div class="flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-lg w-full">
            <!-- Header -->
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-2">Join EduPortal</h2>
                <p class="text-gray-600">Create your account to start learning</p>
            </div>

            <!-- Form -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
                {{ alert_error(error) }}

                {% if errors %}
                    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-red-600 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div>
                                {% for error in errors %}
                                    <p class="text-red-800 text-sm">{{ error }}</p>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <form method="post" action="/register" class="space-y-6">
                    <!-- Name Fields -->
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
                        <div>
                            {{ label('first_name', 'First name', true) }}
                            {{ input('first_name', 'text', 'First name', old.first_name|e, true, 'px-4 py-3') }}
                        </div>
                        <div>
                            {{ label('middle_name', 'Middle name') }}
                            {{ input('middle_name', 'text', 'Middle name', old.middle_name|e, false, 'px-4 py-3') }}
                        </div>
                        <div>
                            {{ label('last_name', 'Last name', true) }}
                            {{ input('last_name', 'text', 'Last name', old.last_name|e, true, 'px-4 py-3') }}
                        </div>
                    </div>

                    <!-- Email -->
                    <div>
                        {{ label('email', 'Email address', true) }}
                        {{ input('email', 'email', 'Enter your email', old.email|e, true, 'px-4 py-3') }}
                    </div>

                    <!-- Password Fields -->
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                        <div>
                            {{ label('password', 'Password', true) }}
                            {{ input('password', 'password', 'Create password', '', true, 'px-4 py-3') }}
                        </div>
                        <div>
                            {{ label('password_confirmation', 'Confirm password', true) }}
                            {{ input('password_confirmation', 'password', 'Confirm password', '', true, 'px-4 py-3') }}
                        </div>
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="flex items-start">
                        <input 
                            id="terms" 
                            name="terms" 
                            type="checkbox" 
                            required 
                            class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded mt-1"
                        >
                        <label for="terms" class="ml-2 block text-sm text-gray-600">
                            I agree to the <a href="#" class="text-blue-600 hover:text-blue-500">Terms and Conditions</a> 
                            and <a href="#" class="text-blue-600 hover:text-blue-500">Privacy Policy</a>
                        </label>
                    </div>

                    {{ primary('Create Account', type='submit', class='w-full py-3') }}
                </form>

                <!-- Divider -->
                <div class="mt-8 pt-6 border-t border-gray-200 text-center">
                    <p class="text-sm text-gray-600">
                        Already have an account? 
                        <a href="/login" class="font-medium text-blue-600 hover:text-blue-500">Sign in here</a>
                    </p>
                </div>
            </div>

            <!-- Helper Text -->
            <div class="mt-6 text-center">
                <p class="text-xs text-gray-500">
                    Fields marked with <span class="text-red-500">*</span> are required
                </p>
            </div>
        </div>
    </div>
{% endblock %}